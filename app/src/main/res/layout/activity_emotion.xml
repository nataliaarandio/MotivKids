<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF8DA">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#1E6B7A"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Volver"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Seleccionar emoción"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Título -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardEmotionTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#63A1D6"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvTitleSelection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Cómo te sientes hoy?"
                android:textAlignment="center"
                android:textColor="#F8F8F8"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Grid con emociones -->
    <GridLayout
        android:id="@+id/gridEmociones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:layout_margin="24dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/cardEmotionTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botón Feliz -->

        <!-- Botón Normal -->

        <!-- Botón Triste -->

        <!-- Botón Llorando -->

        <!-- Botón Enojado (centrado ocupando las 2 columnas) -->
    </GridLayout>

    <ImageButton
        android:id="@+id/btnFeliz"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:contentDescription="Feliz"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_happy"
        app:layout_constraintTop_toBottomOf="@id/cardEmotionTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"/>

    <ImageButton
        android:id="@+id/btnNormal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:contentDescription="Normal"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_normal"
        app:layout_constraintTop_toBottomOf="@id/cardEmotionTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"/>

    <ImageButton
        android:id="@+id/btnSad"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:contentDescription="Triste"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_sad"
        app:layout_constraintTop_toBottomOf="@id/btnFeliz"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"/>

    <ImageButton
        android:id="@+id/btnCry"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:contentDescription="Llorando"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_cry"
        app:layout_constraintTop_toBottomOf="@id/btnNormal"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"/>

    <ImageButton
        android:id="@+id/btnAngry"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:contentDescription="Enojado"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_angry"
        app:layout_constraintTop_toBottomOf="@id/btnSad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
