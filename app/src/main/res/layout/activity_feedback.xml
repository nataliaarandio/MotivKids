<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF8DA">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#1E6B7A"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FeedBack"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Imagen del medidor -->
    <ImageView
        android:id="@+id/imgFeedback"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_emotion_feed"
        android:contentDescription="Feedback Icon"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Pregunta -->
    <TextView
        android:id="@+id/tvPregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="¿Y ahora como te sientes?"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imgFeedback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Caritas -->
    <LinearLayout
        android:id="@+id/emojiContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvPregunta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/emoji1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_happy"
            android:contentDescription="Muy Feliz"
            android:padding="4dp"/>

        <ImageView
            android:id="@+id/emoji2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_normal"
            android:contentDescription="Feliz"
            android:padding="4dp"/>

        <ImageView
            android:id="@+id/emoji3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_sad"
            android:contentDescription="Neutral"
            android:padding="4dp"/>

        <ImageView
            android:id="@+id/emoji4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_cry"
            android:contentDescription="Triste"
            android:padding="4dp"/>

        <ImageView
            android:id="@+id/emoji5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_angry"
            android:contentDescription="Enojado"
            android:padding="4dp"/>
    </LinearLayout>

    <!-- Texto guía -->
    <TextView
        android:id="@+id/tvGuia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Selecciona una opción para ver tu mensaje"
        android:textColor="#666"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/emojiContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Campo de comentarios -->
    <TextView
        android:id="@+id/tvComentarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Cuéntanos más (opcional)"
        android:textColor="#000"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvGuia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/etComentarios"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/editbox_background_normal"
        android:gravity="top|start"
        android:hint="Escribe aquí tus comentarios..."
        android:padding="12dp"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/tvComentarios"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón -->
    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#2BB8A6"
        android:text="Enviar calificación"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/etComentarios"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
